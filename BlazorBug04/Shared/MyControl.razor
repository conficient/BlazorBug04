<div class="form-control">
    <label>@Label</label>
    <InputText @bind-Value="@Value" />
</div>

@code { // binding parameters

private string _value = null;

[Parameter] public string Value { get => _value; private set
    {
        _value = value;
        // confirms this does get called when the InputText is set
        Console.WriteLine($"Setting value to '{value}'");
    }
}

[Parameter] public EventCallback<string> ValueChanged { get; private set; }

[Parameter] public string Label { get; private set; }
}
